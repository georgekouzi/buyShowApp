<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="italic|bold" />
        <ImageView
            android:id="@+id/product_image_new"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name_new"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_price_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_new"
            android:text="product price"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/product_description_new_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_new"
            android:text="product description"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="italic|bold" />



    </RelativeLayout>



</androidx.cardview.widget.CardView>