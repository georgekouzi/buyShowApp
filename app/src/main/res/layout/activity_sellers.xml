<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FloralWhite"
    tools:context=".SellersActivity">
   <TextView
       android:id="@+id/slogen_category"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_centerInParent="true"
       android:layout_marginTop="80dp"
       android:text="Hello seller, Click on one options : "
       android:textAlignment="center"
       android:textSize="26sp"
       android:textStyle="italic"
       android:textColor="@color/teal_700"

       />

   <Button
       android:id="@+id/check_order"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="200dp"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/buttons"
       android:padding="17dp"
       android:text="Check Order"
       android:textAllCaps="false"
       android:textColor="@android:color/white"
       android:textSize="18sp" />

   <Button
       android:id="@+id/add_product"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/check_order"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="5dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/buttons"
       android:padding="17dp"
       android:text="Add New Product"
       android:textAllCaps="false"
       android:textColor="@android:color/white"
       android:textSize="18sp" />

   <Button
       android:id="@+id/view_your_uploaded_products"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/add_product"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="5dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/buttons"
       android:padding="17dp"
       android:text="My uploaded products"
       android:textAllCaps="false"
       android:textColor="@android:color/white"
       android:textSize="18sp" />
   <Button
       android:id="@+id/log_out_s"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/view_your_uploaded_products"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="5dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/buttons"
       android:padding="17dp"
       android:text="Log out"
       android:textAllCaps="false"
       android:textColor="@android:color/white"
       android:textSize="18sp" />

</RelativeLayout>

