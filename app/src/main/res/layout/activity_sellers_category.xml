<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FloralWhite"
    tools:context=".SellersCategoryActivity">

    <TextView
        android:id="@+id/slogen_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="italic"
        android:textColor="@color/teal_700"

        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogen_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/tshirts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tshirts"
            />
        <ImageView
            android:id="@+id/tsports"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sports"
            />
        <ImageView
            android:id="@+id/femaledresses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/female_dresses"
            />
        <ImageView
            android:id="@+id/sweather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sweather"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/glasses"
            />
        <ImageView
            android:id="@+id/pursesbags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/purses_bags"
            />
        <ImageView
            android:id="@+id/hats"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/hats"
            />
        <ImageView
            android:id="@+id/shoess"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/shoess"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/headphoness"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/headphoness"
            />
        <ImageView
            android:id="@+id/laptops"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/laptops"
            />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/watches"
            />
        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mobiles"
            />

    </LinearLayout>




</RelativeLayout>